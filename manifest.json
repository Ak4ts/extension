{
  "manifest_version": 3,

  "name": "Translator",
  "description": "This extension translate your selected text.",
  "version": "1.0",
  "author": "Luiz (Ak4ts)",
  "action": {
    "default_popup": "index.html",
    "default_title": "Click there!"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
    }
  ],
  "host_permissions": ["*://*.example.org/"],
  "permissions": ["storage"]
}
